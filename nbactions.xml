<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>build</actionName>
            <packagings>
                <packaging>nbm</packaging>
            </packagings>
            <goals>
                <goal>install</goal>
                <goal>nbm:cluster</goal>
                <goal>nbm:run-ide</goal>
            </goals>
            <properties>
                <jpda.listen>true</jpda.listen>
                <netbeans.run.params.debug>-J-agentlib:jdwp=transport=dt_socket,suspend=n,server=n,address=${jpda.address}</netbeans.run.params.debug>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <packagings>
                <packaging>nbm</packaging>
            </packagings>
            <goals>
                <goal>install</goal>
                <goal>nbm:cluster</goal>
                <goal>nbm:run-ide</goal>
            </goals>
            <properties>
                <jpda.listen>true</jpda.listen>
                <netbeans.run.params.debug>-J-agentlib:jdwp=transport=dt_socket,suspend=n,server=n,address=${jpda.address}</netbeans.run.params.debug>
            </properties>
        </action>
        <action>
            <actionName>CUSTOM-Start AIMockServer</actionName>
            <displayName>Start AIMockServer</displayName>
            <goals>
                <goal>package</goal>
                <goal>exec:java</goal>
            </goals>
            <properties>
                <exec.mainClass>io.github.jeddict.ai.test.AIMockServer</exec.mainClass>
                <exec.classpathScope>test</exec.classpathScope>
                <exec.args>7777</exec.args>
                <skipTests>true</skipTests>
            </properties>
        </action>
        <action>
        <actionName>CUSTOM-Quick build</actionName>
        <displayName>Quick build</displayName>
        <goals>
            <goal>package</goal>
        </goals>
        <properties>
            <skipTests>true</skipTests>
        </properties>
    </action>
    </actions>
